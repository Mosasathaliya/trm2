---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Adventure Game - TRM2 Arabic Learning">
  <div class="min-h-screen bg-background">
    <!-- Navigation Header -->
    <header class="bg-white shadow-sm border-b">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-primary">TRM2 - Arabic Learning</a>
          <nav class="flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-primary">Home</a>
            <a href="/lessons" class="text-gray-700 hover:text-primary">Lessons</a>
            <a href="/ai" class="text-gray-700 hover:text-primary">AI Tools</a>
            <a href="/progress" class="text-gray-700 hover:text-primary">Progress</a>
            <a href="/adventure-game" class="text-gray-700 hover:text-primary font-semibold">Adventure Game</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <!-- Back Button -->
      <div class="mb-6">
        <a href="/" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>

      <!-- Page Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Arabic Adventure Game</h1>
        <p class="text-xl text-gray-600">Learn Arabic through interactive storytelling and adventure</p>
      </div>

      <!-- Game Interface -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Story Panel -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-lg border p-6">
            <h2 class="text-2xl font-bold mb-4">Story Adventure</h2>
            
            <!-- Scene Image -->
            <div id="scene-image" class="relative w-full h-48 bg-gray-800 rounded-lg overflow-hidden mb-4 hidden">
              <img id="scene-img" src="" alt="Scene" class="w-full h-full object-cover">
              <div id="scene-loading" class="absolute inset-0 flex items-center justify-center text-gray-400 hidden">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white"></div>
              </div>
            </div>

            <!-- Story History -->
            <div id="story-history" class="h-96 overflow-y-auto border rounded-lg p-4 mb-4 bg-gray-50">
              <div class="space-y-4">
                <!-- Story messages will appear here -->
                <div class="bg-blue-100 p-3 rounded-lg">
                  <div class="font-semibold text-blue-800">AI Narrator</div>
                  <div class="text-blue-700">Welcome to your Arabic learning adventure! You find yourself in a mysterious marketplace in Cairo. What would you like to do?</div>
                </div>
              </div>
            </div>

            <!-- Action Input -->
            <form id="action-form" class="space-y-4">
              <div class="flex space-x-2">
                <input type="text" id="action-input" placeholder="What would you like to do?" class="flex-1 p-3 border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                <button type="submit" class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors flex items-center">
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                  Send
                </button>
              </div>
              
              <!-- Quick Actions -->
              <div class="flex flex-wrap gap-2">
                <button type="button" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" onclick="sendAction('Explore the marketplace')">
                  Explore the marketplace
                </button>
                <button type="button" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" onclick="sendAction('Talk to a vendor')">
                  Talk to a vendor
                </button>
                <button type="button" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" onclick="sendAction('Learn about local customs')">
                  Learn about local customs
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Vocabulary Panel -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-lg border p-6">
            <h2 class="text-2xl font-bold mb-4">Vocabulary</h2>
            
            <!-- Special Words -->
            <div class="mb-6">
              <h3 class="text-lg font-semibold mb-3 text-purple-600">Key Words</h3>
              <div id="special-words" class="space-y-2">
                <div class="p-2 bg-purple-50 border border-purple-200 rounded cursor-pointer hover:bg-purple-100 transition-colors" onclick="showWordTranslation('سوق')">
                  <div class="font-semibold text-purple-800">سوق</div>
                  <div class="text-sm text-purple-600">Market</div>
                </div>
                <div class="p-2 bg-purple-50 border border-purple-200 rounded cursor-pointer hover:bg-purple-100 transition-colors" onclick="showWordTranslation('تاجر')">
                  <div class="font-semibold text-purple-800">تاجر</div>
                  <div class="text-sm text-purple-600">Vendor</div>
                </div>
              </div>
            </div>

            <!-- Recent Words -->
            <div>
              <h3 class="text-lg font-semibold mb-3 text-blue-600">Recent Words</h3>
              <div id="recent-words" class="space-y-2">
                <div class="p-2 bg-blue-50 border border-blue-200 rounded cursor-pointer hover:bg-blue-100 transition-colors" onclick="showWordTranslation('مرحبا')">
                  <div class="font-semibold text-blue-800">مرحبا</div>
                  <div class="text-sm text-blue-600">Hello</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Word Translation Modal -->
  <div id="word-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg max-w-md w-full p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold">Word Translation</h3>
          <button onclick="closeWordModal()" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div id="word-content" class="space-y-4">
          <!-- Word content will be populated here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    let storyHistory = [
      {
        sender: 'ai',
        content: 'Welcome to your Arabic learning adventure! You find yourself in a mysterious marketplace in Cairo. What would you like to do?',
        timestamp: new Date()
      }
    ];

    function sendAction(action) {
      if (!action.trim()) return;

      // Add user action to story
      addStoryMessage('user', action);

      // Simulate AI response
      setTimeout(() => {
        const responses = [
          `You decide to ${action.toLowerCase()}. As you approach, you hear the sounds of bargaining and see colorful spices displayed in wooden boxes. "مرحبا!" says a friendly vendor.`,
          `"${action}" you say. The vendor smiles and responds in Arabic. You catch a few familiar words and feel excited about learning more.`,
          `Your curiosity leads you to ${action.toLowerCase()}. The marketplace is alive with activity, and you're surrounded by the beautiful Arabic language.`
        ];
        const randomResponse = responses[Math.floor(Math.random() * responses.length)];
        addStoryMessage('ai', randomResponse);
      }, 1000);
    }

    function addStoryMessage(sender, content) {
      const storyHistoryDiv = document.getElementById('story-history');
      const messageDiv = document.createElement('div');
      
      messageDiv.className = `p-3 rounded-lg ${sender === 'user' ? 'bg-green-100' : 'bg-blue-100'}`;
      messageDiv.innerHTML = `
        <div class="font-semibold ${sender === 'user' ? 'text-green-800' : 'text-blue-800'}">${sender === 'user' ? 'You' : 'AI Narrator'}</div>
        <div class="${sender === 'user' ? 'text-green-700' : 'text-blue-700'}">${content}</div>
      `;
      
      storyHistoryDiv.appendChild(messageDiv);
      storyHistoryDiv.scrollTop = storyHistoryDiv.scrollHeight;
    }

    function showWordTranslation(word) {
      const modal = document.getElementById('word-modal');
      const content = document.getElementById('word-content');
      
      const translations = {
        'سوق': { arabic: 'سوق', english: 'Market', pronunciation: 'sooq', example: 'أنا أذهب إلى السوق' },
        'تاجر': { arabic: 'تاجر', english: 'Vendor', pronunciation: 'taajir', example: 'التاجر يبيع الفواكه' },
        'مرحبا': { arabic: 'مرحبا', english: 'Hello', pronunciation: 'marhaba', example: 'مرحبا، كيف حالك؟' }
      };
      
      const wordData = translations[word] || { arabic: word, english: 'Translation', pronunciation: 'N/A', example: 'Example sentence' };
      
      content.innerHTML = `
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">${wordData.arabic}</div>
          <div class="text-lg text-gray-700 mb-2">${wordData.english}</div>
          <div class="text-sm text-gray-500 mb-4">Pronunciation: ${wordData.pronunciation}</div>
          <div class="p-3 bg-gray-100 rounded">
            <div class="text-sm text-gray-600">Example:</div>
            <div class="text-right" dir="rtl">${wordData.example}</div>
          </div>
        </div>
      `;
      
      modal.classList.remove('hidden');
    }

    function closeWordModal() {
      document.getElementById('word-modal').classList.add('hidden');
    }

    // Form submission
    document.getElementById('action-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const input = document.getElementById('action-input');
      const action = input.value.trim();
      if (action) {
        sendAction(action);
        input.value = '';
      }
    });

    // Close modal when clicking outside
    document.addEventListener('click', function(event) {
      if (event.target.classList.contains('fixed')) {
        event.target.classList.add('hidden');
      }
    });
  </script>
</Layout>

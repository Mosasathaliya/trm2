    // Theme management
    let currentTheme = 'light';
    
    function toggleTheme() {
      currentTheme = currentTheme === 'light' ? 'dark' : 'light';
      document.documentElement.classList.toggle('dark', currentTheme === 'dark');
      localStorage.setItem('theme', currentTheme);
      
      const themeToggle = document.getElementById('theme-toggle');
      if (currentTheme === 'dark') {
        themeToggle.innerHTML = `
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <span class="sr-only">تبديل الوضع</span>
        `;
      } else {
        themeToggle.innerHTML = `
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
          <span class="sr-only">تبديل الوضع</span>
        `;
      }
    }

    // Tab management
    function setActiveTab(tab) {
      // Hide all screens
      document.querySelectorAll('.screen').forEach(screen => {
        screen.classList.add('hidden');
      });
      
      // Remove active class from all nav items
      document.querySelectorAll('.nav-item').forEach(item => {
        item.classList.remove('active', 'text-primary', 'scale-110', 'font-bold');
        item.classList.add('text-muted-foreground');
      });
      
      // Show selected screen
      document.getElementById(`${tab}-screen`).classList.remove('hidden');
      
      // Update header title
      const headerTitle = document.getElementById('header-title');
      if (tab === 'home') {
        headerTitle.textContent = 'TRM2 - Arabic Learning';
      } else {
        headerTitle.textContent = 'TRM2 - Arabic Learning';
      }
      
      // Update navigation
      const navItem = document.querySelector(`[onclick="setActiveTab('${tab}')"]`);
      if (navItem) {
        navItem.classList.add('active', 'text-primary', 'scale-110', 'font-bold');
        navItem.classList.remove('text-muted-foreground');
      }
    }

    // Lessons management
    function showLessons(level) {
      const lessonsList = document.getElementById('lessons-list');
      const lessonsTitle = document.getElementById('lessons-title');
      const lessonsGrid = document.getElementById('lessons-grid');
      
      lessonsTitle.textContent = `دروس المستوى ${level === 'beginner' ? 'المبتدئ' : level === 'intermediate' ? 'المتوسط' : 'المتقدم'}`;
      
      // Simulate lessons data (replace with real data)
      const lessons = [
        { id: 1, title: 'أساسيات النطق', description: 'تعلم الأصوات الأساسية' },
        { id: 2, title: 'الحروف الهجائية', description: 'تعرف على الحروف العربية' },
        { id: 3, title: 'الكلمات الأساسية', description: 'أهم الكلمات للبداية' }
      ];
      
      lessonsGrid.innerHTML = lessons.map(lesson => `
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6 hover:shadow-md transition-shadow cursor-pointer">
          <h3 class="font-semibold mb-2">${lesson.title}</h3>
          <p class="text-sm text-muted-foreground">${lesson.description}</p>
        </div>
      `).join('');
      
      lessonsList.classList.remove('hidden');
    }

    // AI Tools management
    function openAITool(tool) {
      alert(`سيتم فتح ${tool} قريباً!`);

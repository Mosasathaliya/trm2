# Force npm to use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Force npm to include optional dependencies (needed for Rollup)
optional=true

# Use npm's newer resolution algorithm
node-linker=hoisted

# Force npm to install all optional dependencies
include=optional

# Disable the problematic npm behavior
fund=false
audit=false

# Force npm to install optional dependencies
omit=dev

# Use npm's newer behavior for optional deps
engine-strict=false

# Force platform-specific binary installation
target_platform=linux
target_arch=x64
target_libc=glibc

# Force npm to install binaries
bin-links=true

# Use npm's newer behavior
save-exact=false

# Force optional dependency installation
optional-dependencies=true
